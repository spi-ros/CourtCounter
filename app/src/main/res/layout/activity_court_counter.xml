<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    tools:context="com.example.android.courtcounter.CourtCounter">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EDE7F6"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/teamsScoreView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/team_a"
                    android:text="@string/team_a"
                    style="@style/TeamName" />

                <TextView
                    android:id="@+id/team_a_score"
                    android:text="@string/_0"
                    style="@style/TeamScore" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/team_b"
                    android:text="@string/team_b"
                    style="@style/TeamName" />

                <TextView
                    android:id="@+id/team_b_score"
                    android:text="@string/_0"
                    style="@style/TeamScore" />


            </LinearLayout>


        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/point3_button_a"
                android:layout_width="105dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:onClick="addThreeForTeamA"
                android:text="@string/_3_points" />

            <TextView
                android:id="@+id/team_a_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/point3_button_a"

                android:layout_toRightOf="@id/point3_button_a"
                android:fontFamily="sans-serif-light"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingStart="16dp"
                android:text="@string/_0"
                android:textColor="#000000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/team_b_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/point3_button_b"
                android:layout_toStartOf="@id/point3_button_b"
                android:fontFamily="sans-serif-light"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text="@string/_0"
                android:textColor="#000000"
                android:textSize="20sp" />

            <Button
                android:id="@+id/point3_button_b"
                android:layout_width="105dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="8dp"
                android:onClick="addThreeForTeamB"
                android:text="@string/_3_points" />


        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="4dp"
            android:background="@android:color/darker_gray" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/point2_button_a"
                android:layout_width="105dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"

                android:layout_marginLeft="8dp"
                android:onClick="addTwoForTeamA"
                android:text="@string/_2_points" />

            <TextView
                android:id="@+id/team_a_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/point2_button_a"
                android:fontFamily="sans-serif-light"
                android:paddingLeft="16dp"
                android:text="@string/_0"
                android:textColor="#000000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/team_b_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/point2_button_b"
                android:fontFamily="sans-serif-light"
                android:paddingRight="16dp"
                android:text="@string/_0"
                android:textColor="#000000"
                android:textSize="20sp" />

            <Button
                android:id="@+id/point2_button_b"
                android:layout_width="105dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="8dp"
                android:onClick="addTwoForTeamB"
                android:text="@string/_2_points" />


        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="4dp"
            android:background="@android:color/darker_gray" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/point1_button_a"
                android:layout_width="105dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="8dp"
                android:onClick="addOneForTeamA"
                android:text="@string/point1" />

            <TextView
                android:id="@+id/team_a_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/point1_button_a"
                android:fontFamily="sans-serif-light"
                android:paddingLeft="16dp"
                android:text="@string/_0"
                android:textColor="#000000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/team_b_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/point1_button_b"
                android:fontFamily="sans-serif-light"
                android:paddingRight="16dp"
                android:text="@string/_0"
                android:textColor="#000000"
                android:textSize="20sp" />

            <Button
                android:id="@+id/point1_button_b"
                android:layout_width="105dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="8dp"
                android:onClick="addOneForTeamB"
                android:text="@string/point1" />


        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="4dp"
            android:background="@android:color/darker_gray" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/assist_button_a"
                android:layout_width="105dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="8dp"
                android:onClick="assistForTeamA"
                android:text="@string/assists" />

            <TextView
                android:id="@+id/team_a_assist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/assist_button_a"
                android:fontFamily="sans-serif-light"
                android:paddingLeft="16dp"
                android:text="@string/_0"
                android:textColor="#000000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/team_b_assist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/assist_button_b"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:paddingRight="16dp"
                android:text="@string/_0"
                android:textColor="#000000"
                android:textSize="20sp" />

            <Button
                android:id="@+id/assist_button_b"
                android:layout_width="105dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="8dp"
                android:onClick="assistForTeamB"
                android:text="@string/assists" />


        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="4dp"
            android:background="@android:color/darker_gray" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/rebound_button_a"
                android:layout_width="105dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="8dp"
                android:onClick="reboundForTeamA"
                android:text="@string/rebounds" />

            <TextView
                android:id="@+id/team_a_rebound"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/rebound_button_a"
                android:fontFamily="sans-serif-light"
                android:paddingLeft="16dp"
                android:text="@string/_0"
                android:textColor="#000000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/team_b_rebound"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/rebound_button_b"
                android:fontFamily="sans-serif-light"
                android:paddingRight="16dp"
                android:text="@string/_0"
                android:textColor="#000000"
                android:textSize="20sp" />

            <Button
                android:id="@+id/rebound_button_b"
                android:layout_width="105dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="8dp"
                android:onClick="reboundForTeamB"
                android:text="@string/rebounds" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="4dp"
            android:background="@android:color/darker_gray" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="12dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/fouls_button_a"
                android:layout_width="105dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="8dp"
                android:onClick="foulForTeamA"
                android:text="@string/fouls" />

            <TextView
                android:id="@+id/team_a_foul"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/fouls_button_a"
                android:fontFamily="sans-serif-light"
                android:paddingLeft="16dp"
                android:text="@string/_0"
                android:textColor="#000000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/team_b_foul"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/fouls_button_b"
                android:fontFamily="sans-serif-light"
                android:paddingRight="16dp"
                android:text="@string/_0"
                android:textColor="#000000"
                android:textSize="20sp" />

            <Button
                android:id="@+id/fouls_button_b"
                android:layout_width="105dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="8dp"
                android:onClick="foulForTeamB"
                android:text="@string/fouls" />
        </RelativeLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="12dp"
            android:background="#f8bbd0"
            android:onClick="reset"
            android:text="@string/reset" />
    </LinearLayout>


</ScrollView>


