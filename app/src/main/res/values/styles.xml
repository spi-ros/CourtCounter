<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#64FFDA</item>
        <item name="colorButtonNormal">#FFFDE7</item>
        <item name="colorPrimaryDark">@color/colorBlack</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TeamName">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/margin_16</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">#616161</item>
        <item name="android:textSize">@dimen/txt_size_14</item>
    </style>

    <style name="TeamScore">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:paddingBottom">@dimen/padding_24</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/txt_size_56</item>
    </style>

    <style name="MiniDisplays">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:paddingRight">@dimen/padding_16</item>
        <item name="android:paddingLeft">@dimen/padding_16</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/txt_size_20</item>
    </style>

    <style name="ButtonsA">
        <item name="android:layout_width">@dimen/width_105</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_marginLeft">@dimen/margin_8</item>
        <item name="android:layout_marginStart">@dimen/margin_8</item>
    </style>

    <style name="ButtonsB">
        <item name="android:layout_width">@dimen/width_105</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginEnd">@dimen/margin_8</item>
        <item name="android:layout_marginRight">@dimen/margin_8</item>
    </style>

</resources>