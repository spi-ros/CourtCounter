<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#64FFDA</item>
        <item name="colorButtonNormal">#FFFDE7</item>
        <item name="colorPrimaryDark">@color/colorBlack</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TeamName">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/margin_16</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">#616161</item>
        <item name="android:textSize">@dimen/txt_size_14</item>
    </style>

    <style name="TeamScore">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:paddingBottom">@dimen/padding_24</item>
        <item name="android:textColor">#000000"</item>
        <item name="android:textSize">@dimen/txt_size_56</item>
    </style>

</resources>